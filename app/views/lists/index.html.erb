<hr>

<div class="d-flex align-items-center">
  <h2 class="flex-grow-1"> All your lists </h2>
  <%= link_to "➕", new_list_path %>
</div>

<br>

<div class="list-cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list['id']) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(
        <% if list.list_photo.key.nil? %>
          'https://images.unsplash.com/photo-1568876694728-451bbf694b83?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2832&q=80'
        <% else %>
          '<%= cl_image_path list.list_photo.key %>'
        <% end %>
      )">
        <%= link_to list['name'], list_path(list['id']) %>
      </div>
        <%= link_to "❌",
          list_path(list),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
    <% end %>
  <% end %>
</div>
