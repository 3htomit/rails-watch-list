<hr>
<h2> Top 5 movies </h2>
<br>

<div class="d-flex flex-wrap justify-content-between mx-4">
  <% @movies.each do |movie| %>
    <div class="card m-2" style="width: 18rem;">
      <img src=<%= movie['poster_url'] %> class="card-img-top" alt="Poster of <%= movie['title'] %>">
      <div class="card-body">
        <h5 class="card-title"> <%= link_to movie['title'], movie_path(movie['id']) %> </h5>
        <%# <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> %>
          <%= link_to "Bookmark", new_bookmark_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
